<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="meusprojetos.blackjack.MainActivity">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/txtCartasRecebidas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cartas Recebidas:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large" />

        <TextView
            android:id="@+id/txtPrimeiraCarta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Digite aqui a primeira carta..." />

        <ListView
            android:id="@+id/lstCarta1"
            android:layout_width="match_parent"
            android:layout_height="140dp" />

        <TextView
            android:id="@+id/txtSegundaCarta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Digite aqui a segunda carta..." />

        <ListView
            android:id="@+id/lstCarta2"
            android:layout_width="match_parent"
            android:layout_height="166dp" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <Button
            android:id="@+id/btnCalc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BlackJack" />

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
